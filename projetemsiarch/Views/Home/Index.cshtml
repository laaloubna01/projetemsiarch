@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filières et Programmes</title>
    <style>
        /* Couleurs principales */
        :root {
            --emsi-green: #007A5E; /* Couleur verte d'EMSI */
            --emsi-light-green: #80c1b3;
            --text-color: #003366;
            --background-color: #f4f4f4;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: var(--background-color);
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 30px;
            font-size: 2.5em;
        }

        .filiere-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 30px;
        }

        .filiere-item {
            width: 300px;
            text-align: center;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .filiere-item:hover {
                transform: translateY(-10px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            }

        .filiere-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .filiere-item h2 {
            color: var(--emsi-green);
            font-size: 1.5em;
            margin-top: 15px;
        }

        .filiere-item p {
            color: #666;
            font-size: 1em;
            margin: 10px 0;
        }

        .btn {
            background-color: var(--emsi-green);
            color: white;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: var(--emsi-light-green);
            }

        /* Animation de l'image au clic */
        .filiere-image:active {
            transform: scale(1.1);
        }
    </style>
</head>
<body>
    <h1>Filières et Programmes</h1>

    <div class="filiere-list">
        <!-- Filière 1: Informatique -->
        <div class="filiere-item">
            <a href="@Url.Action("Details", "Filieres", new { id = 1 })">
                <img src="~/images/images.jpeg" alt="Informatique" class="filiere-image" />
            </a>
            <h2>Informatique et Réseaux</h2>
            <p>Formation en informatique et réseaux pour les professionnels du secteur.</p>
            <a href="@Url.Action("Details", "Filieres", new { id = 1 })" class="btn">Voir les semestres</a>
        </div>

        <!-- Filière 2: Génie Financier -->
        <div class="filiere-item">
            <a href="@Url.Action("Details", "Filieres", new { id = 2 })">
                <img src="~/images/ingnieur-fin.png" alt="Génie Financier" class="filiere-image" />
            </a>
            <h2>Génie Financier</h2>
            <p>Formation spécialisée en génie financier et gestion d'entreprise.</p>
            <a href="@Url.Action("Details", "Filieres", new { id = 2 })" class="btn">Voir les semestres</a>
        </div>

        <!-- Filière 3: Génie Civil -->
        <div class="filiere-item">
            <a href="@Url.Action("Details", "Filieres", new { id = 3 })">
                <img src="~/images/genie_industriel.jpg" alt="Génie Civil" class="filiere-image" />
            </a>
            <h2>Génie Civil</h2>
            <p>Formation en génie civil avec une forte approche pratique sur le terrain.</p>
            <a href="@Url.Action("Details", "Filieres", new { id = 3 })" class="btn">Voir les semestres</a>
        </div>
    </div>
</body>
</html>
