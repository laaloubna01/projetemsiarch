@model projetemsiarch.Models.Archive

<div class="container">
    <h2 class="text-primary">Modifier une Archive</h2>
    <form method="post">
        <input type="hidden" asp-for="ArchiveId" />

        <div class="mb-3">
            <label asp-for="Nom" class="form-label">Nom</label>
            <input asp-for="Nom" class="form-control" required />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Type" class="form-label">Type</label>
            <input asp-for="Type" class="form-control" required />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Url" class="form-label">URL</label>
            <input asp-for="Url" class="form-control" required />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Modifier</button>
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </form>
</div>
