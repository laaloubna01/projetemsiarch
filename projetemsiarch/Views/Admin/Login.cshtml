@{
    Layout = null; // Ne pas utiliser de layout, page de connexion spécifique
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Roboto', sans-serif;
        }

        .login-container {
            max-width: 500px;
            margin: 100px auto;
            background: #ffffff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }

            .login-container h2 {
                font-size: 1.2rem; /* Smaller font size for "Connexion" */
                margin-bottom: 20px;
                text-align: center;
                color: #007A3D; /* Green color for "Connexion" */
            }

        .form-group label {
            font-weight: 500;
            color: #333;
            font-size: 0.85rem;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ccc;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #007A3D; /* Green button */
            border-color: #006F2C;
            padding: 12px;
            border-radius: 8px;
            font-size: 1rem;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #006F2C;
                border-color: #005720;
            }

        .logo-container {
            text-align: center;
            margin-bottom: 30px;
        }

            .logo-container img {
                width: 200px; /* Larger image size */
                height: auto;
            }

        .alert {
            margin-top: 20px;
            font-weight: bold;
        }

        .footer {
            text-align: center;
            margin-top: 40px;
            font-size: 0.8rem;
            color: #888;
        }

    </style>
</head>
<body>

    <div class="login-container">
        <div class="logo-container">
            <!-- Remplacez le chemin de l'image selon votre dossier -->
            <img src="~/images/logoemsi.png" alt="Logo EMSI">
        </div>

        <h2>Connexion</h2>

        <form method="post" asp-action="Login">
            <div class="form-group">
                <label for="Email">E-mail</label>
                <input type="email" name="email" id="Email" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Password">Mot de passe</label>
                <input type="password" name="password" id="Password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-3">Se connecter</button>
        </form>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-2">
                @ViewBag.ErrorMessage
            </div>
        }

    </div>

    <footer class="footer">
        <p>&copy; 2024 EMSI - <a href="#">Privacy</a></p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

            


