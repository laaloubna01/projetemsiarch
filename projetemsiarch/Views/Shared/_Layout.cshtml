<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EmsiProjet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Styles spécifiques pour le header et la page */
        :root {
            --emsi-green: #007A5E;
            --emsi-light-green: #80c1b3;
            --text-color: #003366;
            --background-color: #f4f4f4;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: var(--background-color);
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        h1 {
            text-align: center;
            margin-top: 30px;
            font-size: 2.5em;
        }

        .filiere-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 30px;
        }

        .filiere-item {
            width: 300px;
            text-align: center;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .filiere-item:hover {
                transform: translateY(-10px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            }

        .filiere-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .filiere-item h2 {
            color: var(--emsi-green);
            font-size: 1.5em;
            margin-top: 15px;
        }

        .filiere-item p {
            color: #666;
            font-size: 1em;
            margin: 10px 0;
        }

        .btn {
            background-color: var(--emsi-green);
            color: white;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: var(--emsi-light-green);
            }

        /* Animation de l'image au clic */
        .filiere-image:active {
            transform: scale(1.1);
        }

        /* Style pour l'header et footer communs */
        header, footer {
            background-color: var(--emsi-green);
            color: white;
        }

        footer {
            background-color: var(--emsi-green);
            color: white;
            text-align: center;
            padding: 15px 0;
            font-size: 1rem;
            margin-top: auto; /* Assure que le footer reste en bas */
            width: 100%;
        }

    </style>
</head>
<body>

    <!-- Header Commun, à ne pas afficher sur la page de login -->
    @if (!Context.Request.Path.Value.Contains("Login"))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-light">
                <div class="container-fluid">
                    <!-- Logo à gauche -->
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="color: white;">
                        <img src="~/images/logoemsi.png" alt="Logo" style="width: 50px; height: 50px; margin-right: 10px;" /> Emsi
                    </a>
                    <!-- Menu à droite -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                            <!-- ml-auto pour aligner à droite -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index" style="color: white;">Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Etudiant" asp-action="Create" style="color: white;">Ajouter Étudiant</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Logout" style="color: white;">Déconnexion</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2024 - EmsiProjet | Tous droits réservés
        </div>
    </footer>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }


    @RenderSection("Scripts", required: false)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
